<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Template</title>
    <style>
        body { font-family: Arial, sans-serif; background-color: #f4f4f4; padding: 20px; }
        .container { background: white; padding: 20px; border-radius: 8px; box-shadow: 0px 0px 10px #ccc; }
        h1 { color: #3498db; }
        p { font-size: 16px; color: #333; }
        a { color: #e74c3c; text-decoration: none; font-weight: bold; }
    </style>
</head>
<body>
    <div class="container">
        <h1>Hello from Nodemailer</h1>
        <p>This is a <strong>beautiful HTML email</strong> sent using <code>Nodemailer</code>.</p>
        <p>I sent email to Weking128@icloud.com</p>
    </div>

    <script>
var nodemailer = require('nodemailer');
const path = require('path');

var transporter = nodemailer.createTransport({
    service: 'gmail',
    host: 'smtp.gmail.com',
    auth: {
        user: 'weking128@gmail.com',
        pass: '---- ---- ---- ----'}
});

var mailOptions = {
    from:'weking128@gmail.com',
    to: 'weking128@icloud.com',
    subject: 'Sending Email using Node.js',
    text: 'That was easy!',
    attachments: [
        {
            filename: 'image.jpg',
            path: path.join(__dirname, 'image.jpg'),
            contentType: 'image/jpg'
        }]
};

transporter.sendMail(mailOptions, function(error, info){
    if(error){
        console.log(error);
    }
    else{
        console.log('Email sent: ' + info.response);
}}
);
    </script>
</body>
</html>
